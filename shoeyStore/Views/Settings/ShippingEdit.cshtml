@model shoeyStore.Models.ViewModels.AddressViewModel

@{
    ViewBag.Title = "ShippingEdit";
}

<div class="container">
    <h2>ShippingEdit</h2>

    @using (Html.BeginForm("ShippingEdit", "Settings", FormMethod.Post, new { role = "form", @class = "" }))
    {
        <div class="row">
            <div class="col-6">
                <input type="hidden" id="IDDireccion" name="IDDireccion" value="@Model.IDDireccion" />
                @Html.LabelFor(e => e.Nombre)
                @Html.TextBoxFor(e => e.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Nombre, "", new { @class = "d-block text-danger mb-2" })

                @Html.LabelFor(e => e.Apellido)
                @Html.TextBoxFor(e => e.Apellido, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Apellido, "", new { @class = "d-block text-danger mb-2" })

                @Html.LabelFor(e => e.Linea)
                @Html.TextBoxFor(e => e.Linea, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Linea, "", new { @class = "d-block text-danger mb-2" })


                @Html.LabelFor(e => e.Ciudad)
                @Html.TextBoxFor(e => e.Ciudad, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Ciudad, "", new { @class = "d-block text-danger mb-2" })
            </div>
            <div class="col-6">

                @Html.LabelFor(e => e.Estado)
                @Html.TextBoxFor(e => e.Estado, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Estado, "", new { @class = "d-block text-danger mb-2" })


                @Html.LabelFor(e => e.ZIP)
                @Html.TextBoxFor(e => e.ZIP, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.ZIP, "", new { @class = "d-block text-danger mb-2" })


                @Html.LabelFor(e => e.Telefono)
                @Html.TextBoxFor(e => e.Telefono, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Telefono, "", new { @class = "d-block text-danger mb-2" })
            </div>
        </div>

        <div class="mt-2">
            <input type="submit" class="btn btn-success" value="Guardar" />
            <input type="button" class="btn btn-outline-danger" value="Regresar"
                   onclick="document.location.href = '@Url.Content("~/Settings/Shipping")'" />
        </div>
    }
</div>
