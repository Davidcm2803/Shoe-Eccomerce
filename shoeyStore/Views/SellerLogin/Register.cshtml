@model shoeyStore.Models.ViewModels.SellerViewModel

@{
    ViewBag.Title = "Seller Registration";
    Layout = "~/Views/Shared/_LayoutNone.cshtml";
}

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-sm-6 text-black p-5 pb-0">
            <div class="ms-xl-4 d-flex justify-content-center mb-3">
                <img src="@Url.Content("~/Content/assets/logo.svg")" alt="logo" class="logo m-2" style="height: 50px; width: 50px;" />
            </div>
            <div class="d-flex align-items-center h-custom-2 ">
                @using (Html.BeginForm("Register", "SellerLogin", FormMethod.Post, new { role = "form", @class = "p-5 row", id = "register" }))
                {
                    <div class="form-outline mb-2">
                        <input type="text" id="NombreVendedor" name="NombreVendedor" class="form-control" style="max-width:100%" required />
                        <label class="form-label" for="NombreVendedor">Your Name</label>
                        @Html.ValidationMessageFor(e => e.NombreVendedor, "", new { @class = "d-block text-danger mb-2" })
                    </div>

                    <div class="form-outline mb-2">
                        <input type="email" id="CorreoElectronico" name="CorreoElectronico" class="form-control" style="max-width:100%" required />
                        <label class="form-label" for="CorreoElectronico">Your Email</label>
                        @Html.ValidationMessageFor(e => e.CorreoElectronico, "", new { @class = "d-block text-danger mb-2" })
                    </div>

                    <div class="form-outline mb-2">
                        <input type="password" id="PasswordR" name="Contrasenna" class="form-control" style="max-width:100%" required />
                        <label class="form-label" for="Contrasenna">Password</label>
                        @Html.ValidationMessageFor(e => e.Contrasenna, "", new { @class = "d-block text-danger mb-2" })
                    </div>

                    <div class="form-check d-flex justify-content-center mb-5">
                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                        <label class="form-check-label" for="form2Example3g">
                            I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                        </label>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit"
                                class="btn btn-success btn-block btn-lg text-white">
                            Register
                        </button>
                    </div>

                    <p class="text-center text-muted mt-5 mb-0">
                        Have already an account? <a href="@Url.Content("~/SellerLogin/Index")"
                                                    class="fw-bold text-body"><u>Login here</u></a>
                    </p>

                }
            </div>
        </div>
        <div id="img-container" class="col-sm-6 px-0 d-none d-sm-block"></div>
    </div>
</div>

<script>
    document.getElementById('img-container').innerHTML = '<img src="https://source.unsplash.com/random/?shoes" alt="Login image" class="w-100 h-100" style="object-fit: cover; object-position: center;">';
</script>

